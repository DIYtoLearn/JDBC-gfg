package multithreading;

public class YoutubeDemoSingleThread
{
	
	public static void main(String[] args) throws InterruptedException
	{
		 System.out.println("video streaming start");
		 for (int i = 0; i < 5; i++) {
			System.out.println("video streaming...");
			Thread.sleep(1000);
		}
		 System.out.println("video streaming end");
		 
		 
		 System.out.println("comment reading start");
		 for (int i = 0; i < 5; i++) {
				System.out.println("comments ... "+i);
				Thread.sleep(1000);
			}
		 System.out.println("comment reading end");
		 
		 
		 System.out.println("downloading start");
		 
		 for (int i = 10; i <=100; i=i+10) {
				System.out.println("downloading..."+i+"%");
				Thread.sleep(1000);
			}
		 System.out.println("downloading end");
		 
	}
	

}
